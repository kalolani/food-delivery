{
  "version": 2,
  "name": "food del web app",
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/server.js" },
    { "src": "/images/(.*)", "dest": "/backend/uploads/$1" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ]
}
